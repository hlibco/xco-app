.header
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;

h1
  font-weight bold
  margin 0 0 32px
  padding 0

.el-container
  margin 32px auto
  max-width 1100px
  padding 0 24px

  @media screen and (max-width: 800px)
    display block
    max-width 500px

.el-form--label-top
  label
    font-size 16px !important
    padding 0 !important
.el-aside
  @media screen and (max-width: 800px)
    width 100%
.el-main
  display block
  padding-top 0
  padding-left 48px
  @media screen and (max-width: 800px)
    display block
    margin-top 42px
    padding 0

.sidebar
  max-width 300px
  @media screen and (max-width: 800px)
    max-width 100%

.cards
  display: flex;
  flex-wrap: wrap;
  font-size 16px
  line-height 1.5

.card
  border-bottom 1px solid #ddd
  padding 24px 0
  float none
  max-width auto
  overflow hidden
  width 100%
  div
    overflow hidden
    margin-bottom 12px
  b
    display block
    float left
    padding-right 16px
    width 200px
    @media screen and (max-width: 800px)
      width auto
    @media screen and (max-width: 520px)
      float: none
      margin-bottom 6px
      width auto
